@{
    ViewData["Title"] = "Home Page";
}
@model CubusMVCTest.Models.LoginModel
@Html.ValidationSummary(true)  

@using (Html.BeginForm())
{
    <div class="loginContainer">
        <form method="POST" asp-controller="Login">
            <h2 style="margin-top:0%;">Login</h2>
            <span style="color: rgba(255, 0, 0, 0.527);/* margin-left: 9%; *//* margin-top: 50%; *//* padding-top: 50%; */padding-bottom: 10px;/* margin-bottom: 15px; */display: block;font-weight: bold;" asp-for="Error">
                @Html.DisplayFor(model => model.Error)
            </span>
            <div id="username" style="width:100%;padding-bottom: 10%;">
                <div style="float:left;width:30%;">
                    <span style="float:left;width: 30%;margin-top: 6%;" asp-for="Username"> Username </span>
                </div>
                <div style="width:60%;float:right;">
                    <input style="height: 30px;width: 100%;margin-bottom: 3px;" asp-for="Username" placeholder="Enter your username" type="text" name="username" autofocus="autofocus"/>@Html.Raw("</br>")
                    @Html.ValidationMessageFor(x=>x.Username)     
                </div>      
            </div>@Html.Raw("</br>")
            <div id="password" style="width:100%">
                <div style="float:left;width:30%;">
                    <span style="float:left;width: 30%;margin-top: 6%;" asp-for="Password">Password</span>
                </div>
                <div style="width:60%;float:right;">
                    <input style="height: 30px;width: 100%;margin-bottom: 3px;" asp-for="Password" placeholder="Enter your password" type="password" name="password"/>
                    @Html.ValidationMessageFor(x=>x.Password)    
                </div>
                @Html.Raw("</br>")
                @Html.Raw("</br>")
            </div>
            @Html.Raw("</br>")
            <input type="submit" style="background-color: #336699;height: 40px;width: 100%;font-size:15px;color: white;border: none;font-weight: bold;margin-top: 5px;" asp-area="" asp-controller="Login" asp-action="Submit" value="Login"/>    
        </form>
    </div>
}

